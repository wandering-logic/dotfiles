@#!/bin/bash

if [[ $# -eq 0 ]]; then
    myargs=...
else
    myargs=$@@
fi

p4 annotate -cq $myargs | sort -un -k1,1 | cut -f1 -d: | tail | xargs p4 describe -s | sed -n '/^Change/,/^Affected files/p' | grep -v "^Affected files"
@
